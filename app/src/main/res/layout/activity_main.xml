<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameEditTest"
            android:background="@drawable/rounded_edit_text"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="    Username" android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditText"
            android:background="@drawable/rounded_edit_text" android:hint="   Email"
            app:layout_constraintStart_toStartOf="@+id/usernameEditTest"
            app:layout_constraintEnd_toEndOf="@+id/usernameEditTest"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/usernameEditTest"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:background="@drawable/rounded_edit_text" android:hint="   Password"
            app:layout_constraintEnd_toEndOf="@+id/emailEditText"
            app:layout_constraintStart_toStartOf="@+id/emailEditText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailEditText"
    />
    <Button
            android:text="Register"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/passwordEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText"/>


    <TextView
            android:text="Already Have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alreadyHaveAccount" app:layout_constraintStart_toStartOf="@+id/registerButton"
            app:layout_constraintEnd_toEndOf="@+id/registerButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/registerButton" android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>